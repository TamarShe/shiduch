        <CheckBox Name="mitpachatCxb" Content="מטפחת" HorizontalAlignment="Left" Margin="427,156,0,0" VerticalAlignment="Top" Height="28" Width="82"  FontFamily="Calibri" FontSize="18" Grid.Column="1"/>

        <Label Content="סטטוס" HorizontalAlignment="Left" Height="33" Margin="161,225,0,0" VerticalAlignment="Top" Width="55" FontFamily="Calibri" FontSize="18" Grid.Column="1"/>
        <Label Content="בירורים" HorizontalAlignment="Left" Height="33" Margin="593,202,0,0" VerticalAlignment="Top" Width="57" FontFamily="Calibri" FontSize="18" Grid.Column="1"/>
        <TextBox Name="friendsTxb" HorizontalAlignment="Left" Height="124" Margin="659,202,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" FontFamily="Calibri" FontSize="18" Grid.Column="1">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </TextBox.Resources>
        </TextBox>-->
        <!--<Label 
            Name="title" 
            Content="" 
            HorizontalAlignment="Left" 
            Height="33" Margin="503,10,0,0" 
            VerticalAlignment="Top" Width="167" 
            FontFamily="Calibri" FontSize="18" 
            Grid.Column="1"/>-->


    </Grid>
</mah:MetroWindow>

